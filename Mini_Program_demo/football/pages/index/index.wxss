/**index.wxss**/
page{
 height: 100%;
}
.head{
  height: 104rpx;
  background: pink;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}
.head .input{
   border: 1px solid white;
   width:65%;
   padding-left:6px;
   margin-left:140rpx;
   margin-top:20rpx;
   font-size:12px;
   border-radius: 10px;

  }
  .hoveractive{
    background: #ccc;
  }
.nav{
  height:81rpx;
  width: 100%;
  background: rgba(255,255,255,0.8); 
  z-index: 2;
  position: fixed;
  top:104rpx;
  left: 0;
}
  .nav-list{
    font-size: 30rpx;
    color: pink;
    border-bottom: 1rpx solid #d9d9d9;
    float: left;
    width: 33.3%;
    text-align: center;
    height:81rpx;
    line-height: 81rpx;
  }
  .nav-active{
    color: hotpink;
		border-bottom:6rpx solid hotpink;
  }
  .load{
    height: 100rpx;
     margin-top: 12rpx;
     line-height: 150rpx
  }
.content{
  width: 100%;
  flex: 1;
  margin-top: 65rpx;
  padding-bottom: 101rpx
}
  .items{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .items-list{
    width: 368rpx;
    height:437rpx;
    border:2rpx solid #e5e5e5;
    margin-top: 8rpx;
  }
  .img-box{
    width: 368rpx;
    height: 367rpx;
    border-bottom: 2rpx solid #e5e5e5;
  }
  .img{
    width: 368rpx;
    height: 367rpx;
  }
  .font{
    float: left;
    font-size: 26rpx;
    color: pink;
    padding:0 24rpx;
    line-height: 67rpx;
    height: 67rpx;
    display: block;
    box-sizing: border-box;
   
  }
  .people{
    float: right;
    color:#aaa;
    line-height: 67rpx;
    font-size: 26rpx;
    margin-right:10rpx;
  }
.foot{
  width: 100%;
  height: 101rpx;
  border-top: 3rpx solid #fff;
  display: flex;
  justify-content: space-between;
  text-align: center;
  padding: 10rpx 0 13rpx;
  box-sizing: border-box;
  background: #fff;
  z-index: 2;
  position: fixed;
  bottom: 0;
  left: 0;
}
.foot-list{
  flex: 1;
  display: flex;
  flex-direction: column;
  color: pink;
  justify-content: space-around;
}
.foot-font{
  font-size: 26rpx; 
}
.foot-active{
  color: hotpink
}
